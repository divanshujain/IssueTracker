<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.body %></td>
        <td><%= issue.project_id %></td>
        <td><%= link_to 'Show', project_issue_path(@project, issue) %></td>
        <td><%= link_to 'Edit', edit_project_issue_path(@project, issue) %></td>
        <td><%= link_to 'Destroy', [@project, issue], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_project_issue_path(@project) %> |
<%= link_to 'Back to Project', @project %>
